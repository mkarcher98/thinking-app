<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        android:gravity="end"
        android:background="@color/centerGColor"
        android:alpha="0.8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/row_userName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:gravity="start"
            android:padding="5dp"
            android:text="Muhammad"
            android:textColor="@color/common_google_signin_btn_text_light_pressed"

            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/row_share_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_menu_share" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/row_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/row_image_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:scaleType="fitXY"
            android:src="@drawable/image_three" />

        <TextView
            android:id="@+id/row_title_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Title"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/row_thoughts_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:paddingStart="15dp"
            android:paddingTop="15dp"
            android:text="Thoughts"
            android:textSize="18sp"
            android:textStyle="italic"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/row_timeStamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="date created" />


    </LinearLayout>


</androidx.cardview.widget.CardView>